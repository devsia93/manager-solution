<UserControl x:Class="RTCGroupWindow.AddPositionUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RTCGroupWindow"
             mc:Ignorable="d" Height="47.688" Width="550">
    <Grid Margin="0,0,0,0">
        <Label Content="Позиция:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cbPosition" HorizontalAlignment="Left" Margin="76,14,0,0" VerticalAlignment="Top" Width="130"/>
        <Label Content="Кол-во:" HorizontalAlignment="Left" Margin="211,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbCount" HorizontalAlignment="Left" Height="23" Margin="267,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="50"/>
        <ComboBox x:Name="cbCountType" HorizontalAlignment="Left" Margin="326,14,0,0" VerticalAlignment="Top" Width="80"/>
        <Label Content="Цена (пачка)" HorizontalAlignment="Left" Margin="411,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="tbPrice" HorizontalAlignment="Left" Height="23" Margin="492,14,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="50"/>
    </Grid>
</UserControl>
